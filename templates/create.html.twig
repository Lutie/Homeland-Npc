{% extends 'base.html.twig' %}

{% block title %}{{ character.id ? 'Update' : 'Create' }} a character{% endblock %}

{% block body %}

    {% set random_route = path('random') %}

    <h1>{{ character.id ? 'Update a' : 'Create a' }} character {{ character.name }}</h1>
    {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
    
    <div class="row">
        {% include '_field.html.twig' with {'subject': 'firstname', 'form': form.firstname} only %}
        {% include '_field.html.twig' with {'subject': 'lastname', 'form': form.lastname} only %}
        {% include '_field.html.twig' with {'subject': 'age', 'form': form.age, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'sex', 'form': form.sex, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'size', 'form': form.size, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'stature', 'form': form.stature, 'random_route': random_route} only %}
    </div>
    <div class="divider"></div>
    <div class="row">
        {% include '_field.html.twig' with {'subject': 'universe', 'form': form.universe, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'ethnic', 'form': form.ethnic, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'cultural', 'form': form.cultural, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'occupation', 'form': form.occupation, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'job', 'form': form.job, 'random_route': random_route} only %}
    </div>
    <div class="divider"></div>
    <div class="row">
        <div class="col-xs-11">
            {{ form_row(form.summary) }}
            {{ form_row(form.description) }}
        </div>
    </div>
    <div class="divider"></div>
    <div class="row">
        {% include '_field.html.twig' with {'subject': 'distinctives', 'form': form.distinctives, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'morphologies', 'form': form.morphologies, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'manias', 'form': form.manias, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'liabilities', 'form': form.liabilities, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'qualities', 'form': form.qualities, 'random_route': random_route} only %}
    </div>
    <div class="divider"></div>
    <div class="row">
        {% include '_field.html.twig' with {'subject': 'character', 'form': form.character, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'alignement', 'form': form.alignement, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'persona', 'form': form.persona, 'random_route': random_route} only %}
        {% include '_field.html.twig' with {'subject': 'ideal', 'form': form.ideal, 'random_route': random_route} only %}
    </div>
    <div class="divider"></div>
    <div class="row" style="margin-bottom: 48px;">
        <div class="align-center">
            {{ form_widget(form.save) }}
            {{ form_widget(form.saveAndNew) }}
            <a href="{{ path('default_index') }}"
            class="btn btn-danger">Cancel</a>
            <div id="random_all" data-api="{{ random_route }}" class="btn btn-warning">Full Randomize</div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}