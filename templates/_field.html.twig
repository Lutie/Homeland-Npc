{% if random_route is defined %}
<div class="col-xs-3">
    {{ form_label(form) }}
    {{ form_widget(form) }}
</div>
<div class="col-xs-1">
    <div id={{"random_" ~ subject}} class="btn btn-warning" style="width:100%" data-api="{{ random_route }}"><i class="fas fa-dice"></i></div>
    <div id={{"lock_" ~ subject}} class="btn btn-primary" style="width:100%"><i class="fas fa-lock-open"></i></div>
</div>
{% else %}
<div class="col-xs-4">
    {{ form_label(form) }}
    {{ form_widget(form) }}
</div>
{% endif %}